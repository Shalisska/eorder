mixin services(items)
	each item in items
		.services-item(class='servises-item--' + item.class)
			.services-item__title=item.name
			img.services-item__img(src='../images/sprite/servises-' + item.src, alt=item.name)
			.services-item__text=item.text





.services
	h2.title-reg.services-title
	.block-reg.services-block.clearfix
		+services([{
			class: 'calc',
			name: 'Калькулятор заказа',
			src: 'calc.png',
			text: 'Посчитать!'
		}, {
			class: 'maket',
			name: 'Проверка макета',
			src: 'maket.png',
			text: 'Загрузить!'
		}, {
			class: 'deliver',
			name: 'Срочная доставка',
			src: 'deliver.png',
			text: 'Заказать!'
		}])