mixin toolbarRight(items)
	.toolbar.toolbar--right
		each item in items
			a.toolbar__item(class='toolbar__item--'+item.name href=item.href)
				//img(src='../images/toolbar/toolbar-icon_'+item.name+'.png', alt=item.alt)
				svg(viewBox=item.viewBox)
					use(xlink:href='#icon-'+item.name)



