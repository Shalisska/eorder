mixin actionControls(items)
	ul.action-controls.nav.nav-tabs
		each item, i in items
			if i === 0
				li.active
					block actionControls
						a.action-controls__item(href='')
							span.action-controls__item--pict: img(src='../images/sprite/' + item.src, alt=item.name)
							span.action-controls__item--name=item.name
			
			else
				li
					block actionControls